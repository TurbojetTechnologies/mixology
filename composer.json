{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "project",
    "license": "GPL-2.0+",
    "require": {
        "composer/installers": "^1.0.21",
        "wikimedia/composer-merge-plugin": "~1.3",
        "turbojet/mixcomponents": "dev-master",
        "turbojet/mixtheme": "dev-master",
        "thoughtbot/bourbon": "v4.2.7",
        "thoughtbot/neat": "v1.8.0"
    },
    "replace": {
        "drupal/core": "~8.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8"
    },
    "repositories": {
        "mixcomponents" : {
            "type": "git",
            "url": "https://github.com/TurbojetTechnologies/mixcomponents.git"
        },
        "mixtheme" : {
            "type": "git",
            "url": "https://github.com/TurbojetTechnologies/mixtheme.git"
        },
        "bourbon" : {
            "type": "package",
            "package": {
              "name": "thoughtbot/bourbon",
              "version": "v4.2.7",
              "source": {
                "url": "https://github.com/thoughtbot/bourbon.git",
                "type": "git",
                "reference": "v4.2.7"
              }
            }
        },
        "neat" : {
          "type": "package",
          "package": {
            "name": "thoughtbot/neat",
            "version": "v1.8.0",
            "source": {
              "url": "https://github.com/thoughtbot/neat.git",
              "type": "git",
              "reference": "v1.8.0"
            }
          }
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "_readme": [
            "By default Drupal loads the autoloader from ./vendor/autoload.php.",
            "To change the autoloader you can edit ./autoload.php."
        ],
        "merge-plugin": {
            "include": [
                "core/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        },
        "installer-paths": {
            "modules/contrib/{$name}":["type:drupal-module"],
            "themes/contrib/{$name}":["type:drupal-theme"]
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "scripts": {
        "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
        "post-autoload-dump": "Drupal\\Core\\Composer\\Composer::ensureHtaccess",
        "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup"
    }
}
